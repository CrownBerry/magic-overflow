<form class="actor-sheet">
    <header class="sheet-header">
        <img src="{{actor.img}}" alt="Character Image" class="portrait" />
        <div class="info">
            <input name="name" type="text" value="{{actor.name}}" placeholder="{{localize 'ui.characterName'}}" />
            <input name="system.archetype" type="text" value="{{actor.system.archetype}}" placeholder="{{localize 'ui.archetype'}}" />
        </div>
    </header>

    <section class="sheet-body">
        <div class="proficiencies">
            <h2>{{localize 'ui.skills'}}</h2>
            <ul>
                {{#each skills}}
                <li>
                    <input type="checkbox" class="skill-checkbox" data-skill="{{name}}" {{#if hasSkill}}checked{{/if}} />
                    {{localize label}}
                    <input type="text" class="skill-specialization" data-skill="{{name}}" value="{{specializations}}" placeholder="Enter specializations"/>
                </li>
                {{/each}}
            </ul>

            <h2>{{localize 'ui.backgrounds'}}</h2>
            <ul>
                {{#each backgrounds}}
                <li>
                    <input type="checkbox" class="background-checkbox" data-background="{{name}}" {{#if hasBackground}}checked{{/if}} />
                    {{localize label}}
                </li>
                {{/each}}
            </ul>

            <h2>{{localize 'ui.knowledge'}}</h2>
            <ul>
                {{#each knowledge}}
                <li>
                    <input type="checkbox" class="knowledge-checkbox" data-knowledge="{{name}}" {{#if hasKnowledge}}checked{{/if}} />
                    {{localize label}}
                </li>
                {{/each}}
            </ul>
        </div>
    </section>
</form>